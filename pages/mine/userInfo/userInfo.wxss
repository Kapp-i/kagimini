/* pages/mine/userInfo/userInfo.wxss */
page {
  width: 100%;
  height: 100%;
  position: fixed;
}
.user_info_list {
  height: 100%;
  background-color: #dedede;
}
.user_info_list .info_item {
  height: 100rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  padding-left: 40rpx;
}
.user_info_list .info_item .item_left {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #dedede;
  height: 100%;
  font-size: 28rpx;
}
.user_info_list .info_item .item_right {
  flex: 1;
  padding-right: 30rpx;
  font-size: 0rpx;
  border-bottom: 1rpx solid #dedede;
  height: 100%;
}
.user_info_list .info_item .item_right image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  float: right;
  margin-top: 15rpx;
}
.user_info_list .info_item .item_right .iconfont {
  font-size: 24rpx;
  margin-left: 20rpx;
  display: inline-block;
  float: right;
  line-height: 100rpx;
  color: #666;
}
.user_info_list .info_item .item_right text {
  display: inline-block;
  font-size: 24rpx;
  vertical-align: middle;
  float: right;
  height: 100rpx;
  line-height: 100rpx;
  color: #666;
}
.user_info_list .info_item:nth-child(1) {
  height: 120rpx;
  line-height: 120rpx;
}
.user_info_list .info_item:nth-child(2) text {
  line-height: normal;
}
.user_info_list .info_item:nth-last-child(1) .item_right {
  border-bottom: none;
}
.user_info_list .info_item:nth-last-child(1) .item_left {
  border-bottom: none;
}
