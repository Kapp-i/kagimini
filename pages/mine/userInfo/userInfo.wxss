/* pages/mine/userInfo/userInfo.wxss */
page {
  width: 100%;
  height: 100%;
  position: fixed;
}
.user_info_list {
  height: 100%;
  background-color: #dedede;
}
.user_info_list .info_item {
  height: 90rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-bottom: 1px solid #dedede;
}
.user_info_list .info_item:nth-child(1) {
  height: 120rpx;
}
.user_info_list .info_item .item_left {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
}
.user_info_list .info_item .item_right {
  flex: 1;
  padding-right: 20rpx;
}
.user_info_list .info_item .item_right image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  float: right;
}
.user_info_list .info_item .item_right .iconfont {
  font-size: 24rpx;
  margin-left: 20rpx;
  display: inline-block;
  float: right;
  line-height: 90rpx;
}
.user_info_list .info_item .item_right text {
  display: inline-block;
  font-size: 24rpx;
  vertical-align: middle;
  float: right;
  line-height: 90rpx;
}
