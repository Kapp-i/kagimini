.back{
	height: 300rpx;
	z-index: 1;
}
.head{
    width: 100%;
    height: 250rpx;
    font-size: 0rpx;
    padding: 16rpx 16rpx;
		position: fixed;
		top:35rpx;
		left: 0;
}
.news{
	border: 1px solid red;
}

.head .head-img{
    height: 125rpx;
    width: 125rpx;
    display: inline-block;
    border-radius: 65.5rpx; 
    vertical-align: middle;
}

.head .head-info{
    display: inline-block;
    height:100%;
    width: 400rpx;
    font-size: 38rpx;
    vertical-align: middle;
}

.user-name{
    font-size: 32rpx;
    height: 50%;
    text-align: left;
    padding-left: 24rpx;
    line-height: 175rpx;
    color: #621d34;
}
.fans{
    font-size: 28rpx;
    height: 50%;
    text-align: left;
    padding-left: 24rpx;
    line-height: 100rpx;
    color: #fff;
}
.fans :nth-child(1){
    margin-right: 24rpx;
}
.head-jump{
    height: 100%;
    display: inline-block;
    width: 170rpx;
    vertical-align: middle;
    font-size: 26rpx;
    line-height: 185rpx;
    color: #fff;
}

.head-jump icon{
    margin-left: 6rpx;
    font-size: 24rpx;
}
